@import "reset.styl"

FS = 14px
LH = 18px
smallerFS = round(0.9 * FS)
smallerLH = FS
xs = 5px
s = (2 * xs)
m = (3 * xs)
l = (4 * xs)
BR = round(2 * LH/3)

body
  padding 0
  margin 0
  font-family Tahoma, sans-serif
  font-size FS
  line-height LH
.sidebar 
  width (250px - 2 * m)
  position fixed
  left 0
  top 0
  bottom 0
  padding 0 m

  background url('../img/fabric.png')
.b-intro
  position relative
  padding m

  background-color #111
  color whitesmoke
  font-size smallerFS
  line-height smallerLH
  box-shadow 0 xs (4 * xs) rgba(0,0,0,0.5)
  &__taskname
    font-weight bold
  &__author:first-letter
    color red

.shri-header
  padding (3*s) s

  &__name
    display inline-block
    margin-bottom BR

    // background-color white
    font-family Verdana
    font-size round(1.4 * FS)
    font-weight normal
    line-height round(1.7 * FS)

  &__link
    display inline-block
    margin-bottom BR  
    color gray
    text-decoration none  

.b-menu
  padding 0 s

  font-size round(1.2 * FS)
  &__item
    display block
    padding s 0
    // background-color #FFF
  &__link:link, &__link:visited
    text-decoration none
    color #333
    border-bottom 1px dotted #AAA
    &:hover, &:active
      color red
      border-bottom solid 1px

